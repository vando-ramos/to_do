<tr class='border-top'>
  
  <td>

    <span class='text-<%= task.css_color %> pr-2'><%= task.symbol %></span>

    <% if task.done? %>
      <s class='text-muted'><%= task.description %></s>
    <% else %>
      <%= task.description %>
    <% end %>
  </td>
  
  <td><%= l task.due_date %></td>

  <td>
    <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %>

    <%= link_to 'Delete', task, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure?' } %>
  </td>

</tr>