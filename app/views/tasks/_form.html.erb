<%= form_with(model: task, local: true) do |form| %>
  <%= form.hidden_field :parent_id, value: task.parent_id || params[:parent_id] %>

  <div class='form-group'>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= form.label :due_date, style: "display: block" %>
    <%= form.date_field :due_date %>
  </div>

  <div class='form-group form-check'>
    <%= form.check_box :done, class: 'form-check-input' %>
    <%= form.label :done, class: 'form-check-label' %>
  </div>

  <%= form.submit class: 'btn btn-primary', data: { disable_with: 'Saving...' } %>

  <%= link_to 'Back', tasks_path, class: 'btn btn-light' %>
<% end %>
